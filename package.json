{
	"name": "@elsikora/bean",
	"version": "0.1.0",
	"description": "Zero-dependency terminal interaction library for prompts, spinners, and rich CLI output.",
	"keywords": [
		"cli",
		"prompt",
		"spinner",
		"typescript",
		"zero-dependency"
	],
	"license": "MIT",
	"author": "Elsikora",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "npm run prebuild && rollup -c",
		"build:test": "npm run prebuild && rollup -c rollup.test.config.js",
		"clean": "rimraf dist coverage .turbo",
		"commit": "cz",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./",
		"lint:all": "npm run lint && npm run lint:types",
		"lint:all:fix": "npm run lint:fix && npm run lint:types:fix",
		"lint:fix": "eslint --fix ./",
		"lint:types": "tsc --noEmit",
		"lint:types:fix": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"release": "semantic-release",
		"test": "vitest run --config vitest.unit.config.js && vitest run --config vitest.end-to-end.config.js",
		"test:all": "npm run test:unit && npm run test:e2e",
		"test:coverage": "vitest run --config vitest.unit.config.js --coverage",
		"test:e2e": "npm run build:test && vitest run --config vitest.end-to-end.config.js --typecheck.tsconfig tsconfig.json",
		"test:unit": "vitest run test/unit --config vitest.unit.config.js",
		"typecheck": "npm run lint:types",
		"validate": "npm run lint:all && npm run test && npm run test:coverage",
		"validate:arch": "npm run lint",
		"validate:docs": "node ./scripts/validate-docs.mjs",
		"validate:fast": "npm run lint && npm run typecheck && npm run test:unit && npm run validate:docs",
		"validate:heavy": "npm run validate:pr && npm run validate:security",
		"validate:package": "npm run build",
		"validate:pr": "npm run validate:style && npm run validate:types && npm run validate:test && npm run validate:package && npm run validate:docs",
		"validate:security": "npm audit --audit-level=high",
		"validate:style": "npm run lint && npm run format",
		"validate:test": "npm run test",
		"validate:types": "npm run typecheck"
	},
	"config": {
		"commitizen": {
			"path": "@elsikora/commitizen-plugin-commitlint-ai"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@elsikora/cladi": "^2.1.2",
		"@elsikora/commitizen-plugin-commitlint-ai": "^2.5.0",
		"@elsikora/eslint-config": "^3.10.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"@saithodev/semantic-release-backmerge": "^3.2.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.6",
		"@semantic-release/npm": "^13.1.4",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/node": "^22.14.0",
		"@vitest/coverage-v8": "^4.0.18",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"eslint": "^10.0.1",
		"eslint-plugin-n": "^17.24.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.5.3",
		"rimraf": "^6.1.3",
		"rollup": "^4.40.2",
		"rollup-plugin-dts-path-alias": "^0.0.3",
		"rollup-plugin-generate-package-json": "^3.2.0",
		"semantic-release": "^25.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vitest": "^4.0.18"
	},
	"publishConfig": {
		"access": "public"
	}
}
